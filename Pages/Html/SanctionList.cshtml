    <!-- Form Section -->
    <div class="flex justify-center mt-8">
        <form asp-page="SanctionResults" class="w-62% bg-white p-8 rounded shadow-lg mx-auto">
            <div class="text-center mb-6">
                <h1 class="text-2xl font-semibold">Search Sanction List</h1>
            </div>

            <!-- Name and Country -->
            <div class="flex flex-wrap -mx-4 mb-4">
                <div class="w-full md:w-1/2 px-8 mb-4 md:mb-0">
                    <label for="Sname" class="block text-sm font-medium text-gray-600">Name:</label>
                    <input type="text" id="Sname" name="Sname" maxlength="40" 
                           class="mt-1 p-2 w-full border rounded focus:outline-none focus:border-blue-500">
                </div>

                <div class="w-full md:w-1/2 px-8">
                    <label for="Country" class="block text-sm font-medium text-gray-600">Country:</label>
                    <input type="text" id="Country" name="Country" maxlength="40" 
                           class="mt-1 p-2 w-full border rounded focus:outline-none focus:border-blue-500">
                </div>
            </div>

            <!-- Passport No and Score -->
            <div class="flex flex-wrap -mx-4 mb-4">
                <div class="w-full md:w-1/2 px-8 mb-4 md:mb-0">
                    <label for="Spassport" class="block text-sm font-medium text-gray-600">Passport No:</label>
                    <input type="text" id="Spassport" name="Spassport" maxlength="40" 
                           class="mt-1 p-2 w-full border rounded focus:outline-none focus:border-blue-500">
                </div>

                <div class="w-full md:w-1/2 px-8">
                    <label for="Mpercentage" class="block text-sm font-medium text-gray-600">
                        Matching
                        Percentage:
                    </label>
                    <input type="text" id="Mpercentage" name="Mpercentage" 
                           class="mt-1 p-2 w-full border rounded focus:outline-none focus:border-blue-500">
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit"
                        class="bg-blue-500 text-white px-8 py-2 rounded hover:bg-blue-600 focus:outline-none">
                    Search
                </button>
            </div>
        </form>

    </div>
    <!-- Form Result Table Section -->
    <!-- Search Result Section -->
    <!-- Table Section -->
    <div class="container w-full md:w-4/5 xl:w-3/5 mx-auto px-2">

        <!-- Title -->
        <h1 class="flex items-center font-sans font-bold break-normal text-indigo-500 px-2 py-8 text-xl md:text-2xl">
            Search Result
        </h1>

        <!-- Card -->
        <div id='recipients' class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">
            <table id="example" class="stripe hover" style="width:100%; padding-top: 1em; padding-bottom: 1em;">
                <thead>
                    <tr>
                        <!-- Add your column headers here -->
                        <th>SL</th>
                        <th>Name</th>
                        <th>Country</th>
                        <th>List Type</th>
                        <th>Subtype</th>
                        <th>Passport No</th>
                        <th>Profile</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewData["SanctionData"] != null)
                    {
                        DataTable dataTable = ViewData["SanctionData"] as DataTable;
                        int sl = 1;

                        foreach (DataRow row in dataTable.Rows)
                        {
                            <tr>
                                <td class="py-2 px-4 align-middle">@sl</td>
                                <td class="py-2 px-4 align-middle">@row["Name"]</td>
                                <td class="py-2 px-4 align-middle">@row["Country"]</td>
                                <td class="py-2 px-4 align-middle">@row["Type"]</td>
                                <td class="py-2 px-4 align-middle">@row["Programs"]</td>
                                <td class="py-2 px-4 align-middle">@row["PassportNo"]</td>
                                <td class="py-2 px-4 align-middle">
                                    <a href="profilePage.html">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                             xmlns="http://www.w3.org/2000/svg">
